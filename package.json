{
  "name": "feedpon",
  "version": "0.0.0",
  "description": "The feed reader to change the world",
  "repository": {
    "type": "git",
    "url": "https://github.com/emonkak/feedpon.git"
  },
  "scripts": {
    "browserify": "browserify --ignore crypto --transform [ babelify --extensions .js,.ts ] --plugin [ tsify ]",
    "build": "npm-run-all -s build:dist-dir -p build:css build:app-js build:background-js dist",
    "build:app-js": "npm run browserify -- --outfile dist/js/app.js src/js/app.js && npm run uglify -- --output dist/js/app.min.js dist/js/app.js",
    "build:background-js": "npm run browserify -- --outfile dist/js/background.js src/js/background.js && npm run uglify -- --output dist/background.min.js dist/js/background.js",
    "build:css": "lessc src/less/index.less dist/css/index.css && cleancss -o dist/css/index.min.css dist/css/index.css ",
    "build:dist-dir": "mkdirp dist/{js,css,fonts}",
    "build:fonts": "ncp node_modules/font-awesome/fonts dist/fonts",
    "clean": "rimraf dist app/chrome/assets",
    "dist": "ncp dist app/chrome",
    "test": "echo \"Error: no test specified\" && exit 1",
    "uglify": "uglifyjs --compress warnings=false --mangle",
    "watch": "npm-run-all -s build:dist-dir -p watch:app-js watch:background-js watch:css watch:dist watch:fonts",
    "watch:app-js": "npm run watchify -- --outfile dist/js/app.js src/js/app.js",
    "watch:background-js": "npm run watchify -- --outfile dist/js/background.js src/js/background.js",
    "watch:css": "watch 'lessc --verbose src/less/index.less dist/css/index.css' src/less",
    "watch:dist": "watch 'npm run dist' dist",
    "watch:fonts": "watch 'npm run build:fonts' node_modules/font-awesome/fonts",
    "watchify": "watchify --debug --verbose --ignore crypto --transform [ babelify --extensions .js,.ts ] --plugin [ tsify ]"
  },
  "author": "Shota Nozaki",
  "license": "MIT",
  "dependencies": {
    "babel-core": "~6.0.20",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "classnames": "^2.2.0",
    "font-awesome": "^4.4.0",
    "less": "^2.5.3",
    "linq": "^3.0.5",
    "localforage": "^1.3.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^1.2.12",
    "qs": "^6.0.0",
    "react": "^0.14.0",
    "react-addons-pure-render-mixin": "^0.14.2",
    "react-dom": "^0.14.0",
    "reflect-metadata": "^0.1.2",
    "regenerator": "^0.8.42",
    "rimraf": "^2.4.3",
    "rx": "^4.0.6",
    "tsify": "^0.12.2",
    "typescript": "^1.6.2",
    "uglify-js": "^2.5.0",
    "watch": "^0.16.0",
    "watchify": "^3.6.0",
    "whatwg-fetch": "^0.10.0"
  }
}
