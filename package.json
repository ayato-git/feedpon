{
  "name": "feedpon",
  "version": "0.0.0",
  "description": "The feed reader for me",
  "repository": {
    "type": "git",
    "url": "https://github.com/emonkak/feedpon.git"
  },
  "scripts": {
    "build": "NODE_ENV=production npm-run-all -p build:css build:fonts build:js",
    "build:css": "postcss -c postcss.production.json -o app/chrome/css/index.css resources/css/index.css",
    "build:fonts": "cp -r node_modules/font-awesome/fonts app/chrome/fonts",
    "build:js": "webpack",
    "clean": "rm -fr app/chrome/{js,css,fonts}",
    "lint": "tslint src/**/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-run-all -p watch:css watch:fonts watch:js",
    "watch:css": "postcss -c postcss.json -w -o app/chrome/css/index.css resources/css/index.css",
    "watch:fonts": "watch 'npm run build:fonts' node_modules/font-awesome/fonts",
    "watch:js": "webpack --watch --devtool source-map"
  },
  "author": "Shota Nozaki",
  "license": "MIT",
  "dependencies": {
    "font-awesome": "4.7.0",
    "immutability-helper": "2.0.0",
    "localforage": "git+https://github.com/localForage/localForage.git",
    "react": "15.4.1",
    "react-dom": "15.4.1",
    "react-router": "3.0.0",
    "symbol-observable": "1.0.4"
  },
  "devDependencies": {
    "@types/chrome": "0.0.36",
    "@types/immutability-helper": "2.0.15",
    "@types/react": "0.14.55",
    "@types/react-dom": "0.14.19",
    "@types/react-router": "2.0.41",
    "@types/whatwg-fetch": "0.0.32",
    "cash-cp": "0.2.0",
    "cash-rm": "0.2.0",
    "cssnano": "3.9.1",
    "npm-run-all": "3.1.2",
    "postcss-cli": "2.6.0",
    "postcss-cssnext": "2.9.0",
    "postcss-import": "9.0.0",
    "ts-loader": "1.3.2",
    "tslint": "4.0.2",
    "typescript": "2.1.4",
    "watch": "1.0.1",
    "webpack": "1.14.0"
  }
}
