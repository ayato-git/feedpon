div(ng-controller="SubscriptionController as subscription" side="left")
  ion-header-bar

  ion-content(overflow-scroll="true")
    ion-refresher(pulling-text="Pull to refresh..." on-refresh="subscription.reload()")

    ul.list
      li(ng-repeat="category in categories")
        .item.item-divider {{category.label}}

        ul
          li(ng-repeat="item in items | filter:{category: category}")
            a.item.item-icon-right(ng-click="subscription.selected(item.subscription)")
              | &nbsp;{{item.subscription.title}}
              span.badge.badge-assertive(ng-if="item.unreadCount.count > 0") {{item.unreadCount.count}}

